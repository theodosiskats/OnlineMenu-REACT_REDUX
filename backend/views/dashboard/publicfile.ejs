<%- include('../partials/dashboard/header') %> 
<%- include('../partials/flash') %>

    <div class="card-body">
        <h5 class="card-title">Δημοσίευση Εγγράφων</h5>

            <div class="col-md-6 offset-md-3">
                <div class="row">
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Modal">Διαγραφή κοινοποιημένου Εγγράφων</button>
                </div>
            <hr>
        </div>

        <form class="col-md-6 offset-md-3 needs-validation" action="/publicfile" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>

            <div class="mb-3">
                <label class="form-label" for="ναμε">Ονομασία</label>
                <input required class="form-control" type="text" id="name" name="publicfile[name]" required />
                <div class="invalid-feedback">
                    Πρέπει να εισάγετε όνομα προϊόντος.
                </div>
            </div>

            <label class="form-label" for="myFile">Αρχείο PDF</label>

            <div class="form-file custom-file">
                <input type="file" class="form-file-input" id="myFile" name="myFile" required>
            </div>
            <div style="padding: 10px;"></div>
            <div class="row float-right">
                <button type="submit" class="btn btn-success">Αποθήκευση</button>
            </div>
            <div class="invalid-feedback">
                Πρέπει να φορτώσετε ένα αρχείο pdf.
            </div>
            <a href="/dash/">Επιστροφή</a>	
        </form>

              <!-- Modal Start -->
      <div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="ModalLabel">Επιβεβαίωση διαγραφής</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Άκυρο</button>
              <form action="/dash/syssitio/?_method=DELETE" method="POST">
                <button class="btn btn-danger">Διαγραφή</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Modal End -->
         

<%- include('../partials/dashboard/footer') %> 
