{
  "name": "onlinemenu",
  "version": "0.0.1",
  "description": "Online Menu App - BearDevKT",
  "main": "server.js",
  "author": "Theodosis Katsoulis",
  "license": "See license in <LICENSE>",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "devNodemon": "concurrently \"npm run serverSurface\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "reactide-server": "webpack-dev-server --config reactide.config.js --mode development --hot"
  },
  "dependencies": {
    "cloudinary": "^1.28.1",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-session": "^1.17.2",
    "helmet": "^5.0.2",
    "method-override": "^3.0.0",
    "mongoose": "^6.1.8",
    "multer": "^1.4.4",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemon": "^2.0.15",
    "passport": "^0.5.2",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0",
    "reactide-config": "^1.0.2"
  },
  "devDependencies": {
    "concurrently": "^7.0.0"
  }
}