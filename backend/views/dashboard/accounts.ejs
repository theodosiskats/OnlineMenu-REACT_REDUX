<%- include('../partials/dashboard/header') %> 
<%- include('../partials/flash') %>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Πίνακας Λογαριασμών Χρηστών Διαχείρησης</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Ονομασία</th>
                        <th>Username</th>
                        <th>Ρόλος - Εγκατάσταση</th>
                        <th></th>
                    </tr>
                </thead>
                <!-- TODO - prevent admin from deleting his account -->
                <tbody>
                    <% for (account of accounts) { %>
                    <tr class="trow">
                            <div>
                                <td style="width: 30%;"><%=account.name%></a></td>
                                <td style="width: 30%;"><%=account.username%></td>
                                <td style="width: 30%;"><%=account.role%></td>
                                <td style="width: 10%;">
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#Modal<%=account._id%>">Διαγραφή</button> 
                                </td>
                            </div>
                    </tr>
                    <%}%>
                </tfoot>
            </table>
        </div>

    </div>
</div>

<!-- Modal Start -->
<div class="modal fade" id="Modal<%=account._id%>" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="ModalLabel">Επιβεβαίωση διαγραφής μηνύματος</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Άκυρο</button>
            <form  action="/delete/<%=account._id%>?_method=DELETE" method="POST">
                <button class="btn btn-danger">Διαγραφή</button>
            </form>
        </div>
        </div>
    </div>
</div>
<!-- Modal End -->
<%- include('../partials/dashboard/footer') %> 
